{# src/Bones/YummBundle/Resources/views/Page/contact.html.twig #}
{% extends 'BonesYummBundle::layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
	<header>
		<h1>Contact MeatOnYourBones</h1>
	</header>

	<p>Want to contact MeatOnYourBones?</p>

	<form action="{{ path('bones_yumm_contact') }}" method="POST" {{ form_enctype(form) }} class="blogger">
		{{ form_errors(form) }}

		{{ form_row(form.name) }}
		{{ form_row(form.email) }}
		{{ form_row(form.subject) }}
		{{ form_row(form.body )}}
		{{ form_rest(form) }}

		<input type="submit" value="Submit" />
	</form>
{% endblock %}